<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Database Explorer Web Application</display-name>

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:dbex-web/dbex-log4j.xml</param-value>
	</context-param>

	<context-param>
		<param-name>log4jExposeWebAppRoot</param-name>
		<param-value>false</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:application-context.xml</param-value>
	</context-param>


	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

<!-- Http Flex Session attribute and binding listener support -->
	<listener>
		<listener-class>flex.messaging.HttpFlexSession</listener-class>
	</listener>

<!-- MessageBroker CXFServlet -->
	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<display-name>CXF Servlet</display-name>
		<servlet-class>
			org.apache.cxf.transport.servlet.CXFServlet
	    </servlet-class>
	</servlet>

<!-- The front controller of this Spring Web application, responsible 
		for handling all application requests -->
	<servlet>
		<servlet-name>FlexServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FlexServlet</servlet-name>
		<url-pattern>/app/fmb/*</url-pattern>
	</servlet-mapping>

	
	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>

<!-- User-defined Servlets  -->
	<servlet>
		<servlet-name>DbexFileServlet</servlet-name>
		<display-name>File Servlet</display-name>
		<servlet-class>com.gs.dbex.web.DbexFileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DbexFileServlet</servlet-name>
		<url-pattern>/app/DbexFileServlet</url-pattern>
	</servlet-mapping>

<!-- Session Info  -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

<!-- Welcome files  -->
	<welcome-file-list>
		<welcome-file>/swf/DbexMainApp</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	
	
</web-app>
