                <>
                    <menuitem label="File">
                        <menuitem label="New connection" 
                        	data="NEW_CONNECTION_MENU_ITEM"
                        	icon="newConnectionIcon"/>
                        <menuitem label="Exit" data="EXIT_MENU_ITEM"/>
                    </menuitem>
                    <menuitem label="Edit">
                        <menuitem label="MenuItem 2-A" type="check"  data="2A"/>
