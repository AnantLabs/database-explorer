                        <menuitem label="About Dbex" data="ABOUT_DBEX"/>
                        <menuitem label="Help" data="HELP"/>
                    </menuitem>
                </>;
 */
            // Event handler for the MenuBar control's itemClick event.
            private function menuHandler(event:MenuEvent):void  {
                Alert.show("Label: " + event.item.@label + "\n" + 
                    "Data: " + event.item.@data, "Clicked menu item");
            }

            // Event handler to initialize the MenuBar control.
            private function initCollections():void {
                //menuBarCollection = new XMLListCollection(menubarXML);
            }

		]]>
	</mx:Script>
	
	<mx:XML id="menuBarCollection" format="e4x">
		<root>
		    <menuitem label="File" icon="newConnectionIcon" data="A"></menuitem>
		    <menuitem label="Exit" icon="newConnectionIcon" data="B"></menuitem>
		</root>
	</mx:XML> 
	<mx:menuBarItems>
		
	</mx:menuBarItems>
</mx:MenuBar>
