<mx:MenuBar xmlns:mx="http://www.adobe.com/2006/mxml"
	labelField="@label" itemClick="menuHandler(event);" 
	iconField="@icon"
            dataProvider="{menuBarCollection}" creationComplete="initCollections();">
	
